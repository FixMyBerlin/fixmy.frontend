{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "~": ["./"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": ["typescript/custom.d.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
