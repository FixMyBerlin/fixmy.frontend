{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2015",
    "types": [ "@honkhonk/vite-plugin-svgr/client" , "jest",  "@testing-library/jest-dom"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "files": ["typescript/custom.d.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules/*"]
}
