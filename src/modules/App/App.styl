#root, .app
  height: 100%
  position: relative

.app__content
  width: 100%
  height: 100%
  overflow: hidden
  display: flex

.app__content--overlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(255, 255, 255, .8)
  z-index: 100000
  overflow: auto
  -webkit-overflow-scrolling: touch